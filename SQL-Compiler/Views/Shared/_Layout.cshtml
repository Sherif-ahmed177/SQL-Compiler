<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Compilerex</title> <!-- Branding update -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-sm">
            <div class="container d-flex justify-content-between">
                <a class="navbar-brand" asp-area="" asp-controller="Lexer" asp-action="Index">
                    <i class="bi bi-layers-fill me-2"></i>
                    <span>Compilerex</span> 
                </a>
                <div class="text-white-50 small d-none d-sm-block">
                    Phase 2: Syntax Analysis
                </div>
            </div>
        </nav>
    </header>

    <div class="page-container">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer py-4 text-center text-muted border-top border-secondary mt-auto">
        <div class="container">
            <small>&copy; 2025 Nile University — Advanced Compiler Design</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
